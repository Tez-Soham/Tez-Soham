    <style>
        .container {
            border-radius: 15px;
            background-color: rgb(48, 46, 46);
        }

        #display {
            padding: 0px;
            margin: 0px;
            background-color: rgb(54, 102, 165);
            color: white;
            border-radius: 10px;
        }

        .btn {
            align-items: center;
            font-size: 40px;
            height: 70px;
            width: 81px;
            background-color: black;
            font-family: 'Courier New', Courier, monospace;
            color: white;
            border-radius: 15px;
        }
